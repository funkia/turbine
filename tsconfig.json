{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "declarationDir": "./defs",
    "rootDir": "./src",
    "declaration": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es5", "es2015.core", "es2015.promise", "es2015.iterable", "es2015.proxy"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
