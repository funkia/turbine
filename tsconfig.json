{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "dist/es6",
    "rootDir": "./src",
    "declaration": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noStrictGenericChecks": true,
    "lib": ["dom", "es2017"],
    "jsxFactory": "createElement",
    "jsx": "react"
  },
  "include": ["src/**/*", "test/**/*", "examples/**/*"],
  "exclude": ["node_modules"]
}
